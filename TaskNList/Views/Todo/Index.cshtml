@model ListTodoViewModel;

<div class="row">
    <div class="col">
        <h1>Todo List</h1>
        <p>Welcome to your Todo List application!</p>
        <p>Here you can manage your tasks efficiently.</p>
        
        <div class="mt-3">
            <a class="btn btn-primary" asp-action="Create">Add New Task</a>
        </div>

        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Task Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model.Todos)
                {
                    <tr>
                        <td scope="row">@task.Id</td>
                        <td scope="row">@task.Title</td>
                        <td scope="row">@task.Date</td>
                        <td scope="row">@task.IsCompleted</td>
                        <td scope="row">
                            <a class="btn btn-success" asp-action="Complete" asp-route-id="@task.Id">Complete</a>
                            <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@task.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>